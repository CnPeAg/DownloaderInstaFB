<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mngh.tuanvn.facebookvideodownloader">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/fbdownloader_ic"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <service android:name=".runningService"/>
        <activity android:name=".ShowAds"/>
        <activity
            android:name="com.mngh.tuanvn.facebookvideodownloader.Browser"
            android:label="@string/browser"
            android:parentActivityName="com.mngh.tuanvn.facebookvideodownloader.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.mngh.tuanvn.facebookvideodownloader.MainActivity"
            android:label="@string/title_activity_video_display"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name="com.mngh.tuanvn.facebookvideodownloader.VideoPlayerActivity"
            android:label="@string/title_activity_video_display"
            android:parentActivityName="com.mngh.tuanvn.facebookvideodownloader.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.mngh.tuanvn.facebookvideodownloader.PresentationActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            </activity>
    </application>

</manifest>